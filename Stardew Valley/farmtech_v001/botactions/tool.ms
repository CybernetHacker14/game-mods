me.selectAndUseTool = function(i)
  me.select i
  me.useTool
end function

me.useAxe = function
  me.selectAndUseTool(0)
end function

me.useHoe = function
  me.selectAndUseTool(1)
end function

me.useWateringCan = function
  me.selectAndUseTool(2)
end function

me.usePickaxe = function
  me.selectAndUseTool(3)
end function

me.useScythe = function
  me.selectAndUseTool(4)
end function
